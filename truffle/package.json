{
  "name": "parity-bridge",
  "version": "1.0.0",
  "description": "Parity bridge",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paritytech/parity-bridge.git"
  },
  "bugs": {
    "url": "https://github.com/paritytech/parity-bridge/issues"
  },
  "homepage": "https://github.com/paritytech/parity-bridge",
  "devDependencies": {
    "concurrently": "^3.5.1",
    "coveralls": "^3.0.0",
    "ganache-cli": "^6.0.3",
    "solidity-coverage": "^0.4.2",
    "truffle": "^4.0.1"
  },
  "dependencies": {},
  "scripts": {
    "ci": "concurrently \"npm run truffle-with-rpc\" \"npm run solidity-coverage\"",
    "ganache": "ganache-cli -p 8545",
    "solidity-coverage": "solidity-coverage",
    "test": "npm run truffle-with-rpc",
    "truffle": "truffle test",
    "truffle-with-rpc": "concurrently --success first --kill-others \"npm run ganache\" \"npm run truffle\""
  }
}
